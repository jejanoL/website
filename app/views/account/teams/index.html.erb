<div class="col-md-12">
  
  <h2 class="text-center"> Teams that I am in </h2>
  
  <table class="table">
    <thead>
      <tr>
        <th> # </th>
        <th> Title </th>
        <th> Project Count </th>
        <th> Last Update </th>
      </tr>
    </thead>
    
    <tbody>
      <% @teams.each do |team| %>
        <tr>
          <td> # </td>
          <td> <%= link_to(team.title, team_path(team)) %> </td> 
          <td> <%= team.projects.size %> </td> 
          <td> <%= team.updated_at %> </td> 
        </tr>
      <% end %>
    </tbody>
  </table>
</div>